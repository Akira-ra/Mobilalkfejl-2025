<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/furnitureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="10dp"
            android:text="Bútor neve"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/furnitureDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/furnitureName"
            android:padding="10dp"
            android:text="Bútor ára"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/furniturePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/furnitureDetails"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Bútor ára"
            android:textColor="?android:textColorSecondary" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>